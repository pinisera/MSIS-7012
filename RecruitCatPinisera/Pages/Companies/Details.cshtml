@page
@model RecruitCatPinisera.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details Companies</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobTitle.Title)
        </dd>
    </dl>
</div>
@if (Model.Company.Candidates.Any())
{
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].WorkExp)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].EmailId)</th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].ContactNo)</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Company.Candidates)

                {

                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TargetSalary)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkExp)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmailId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No candidates exist</div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company?.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
